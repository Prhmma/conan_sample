{
    "version": "2.0.0",
    "command": "bash",
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "label": "build with conan + cmake",
            "dependsOn": [
                "mkdir",
                "conan",
                "cmake"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "isBackground": true
        },
        {
            "label": "mkdir",
            "type": "shell",
            "linux": {
                "command": "mkdir -p ./build"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist .\\build mkdir .\\build"]
            }
        },
        {
            "label": "conan",
            "type": "shell",
            "command": "conan install ."
        },
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake ../src -G Ninja ",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}